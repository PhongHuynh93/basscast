<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/controls"
    android:layout_width="match_parent"
    android:layout_height="@dimen/controls_height"
    android:layout_gravity="bottom|start"
    android:background="@android:color/background_light"
    android:elevation="@dimen/controls_elevation"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    app:elevation="@dimen/controls_elevation">

    <ImageButton
        android:id="@+id/control_action_play"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:background="@android:color/transparent"
        android:src="@drawable/ic_av_play_ripple" />

    <ImageButton
        android:id="@+id/control_action_stop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/control_action_play"
        android:layout_toStartOf="@id/control_action_play"
        android:background="@android:color/transparent"
        android:src="@drawable/ic_av_stop_ripple" />

    <TextView
        android:id="@+id/control_title"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toLeftOf="@id/control_action_stop"
        android:layout_toStartOf="@id/control_action_stop"
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:maxLines="2"
        android:singleLine="false"
        android:text="Stream title"
        android:textAppearance="?android:textAppearanceLarge" />

</RelativeLayout>